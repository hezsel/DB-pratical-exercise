<%- include("../partials/_header") %>

<div class="container mt-5">
  <%- include("../partials/_consultasHeader") %>
  
  <div class="row">
    <div class="col-md-8 col-xs-12 col-sm-12 offset-md-2">
      <ol class="list-group list-group-numbered">
        <% if (consultas.length > 0) { %>
          <% for(let i = 0; i < consultas.length; i++) { %>
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <div class="bold"><b><%= consultas[i].horario %></b> - <%= consultas[i].paciente.nome %> </div>
              </div>
              <i class="fa fa-user"></i><span class="fas fa-camera"></span>
              <% if(consultas[i].realizada) { %>
                <span class="badge badge-success">Realizada</span>
              <% } else { %>
                <div class="btn-group">
                  <form action="/consulta/finalize" method="POST">
                    <input
                      type="text"
                      name="id_consulta"
                      value="<%= consultas[i].id_consulta %>"
                      style="display: none;"
                    />
                    <input
                      type="text"
                      name="crm_medico"
                      value="<%= crm_medico %>"
                      style="display: none;"
                    />
                    <input
                      type="text"
                      name="data"
                      value="<%= data %>"
                      style="display: none;"
                    />
                    <button
                      class="btn btn-primary btn-sm"
                      type="submit"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Atender
                    </button>
                  </form>
                  <form action="/consulta/cancel" method="POST">
                    <input
                      type="text"
                      name="id_consulta"
                      value="<%= consultas[i].id_consulta %>"
                      style="display: none;"
                    />
                    <input
                      type="text"
                      name="crm_medico"
                      value="<%= crm_medico %>"
                      style="display: none;"
                    />
                    <input
                      type="text"
                      name="data"
                      value="<%= data %>"
                      style="display: none;"
                    />
                    <button
                      class="btn btn-danger btn-sm" 
                      type="submit" 
                      data-bs-toggle="dropdown" 
                      aria-expanded="false"
                    >
                      Exluir
                    </button>
                  </form>
                </div>
              <% } %>
            </li>
            <% } %>
          <% } else { %>
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <h6 class="bold">Sem consultas :(</h6>
              </div>
            </li>
          <% } %>
        </ol>
    </div>
  </div>
</div>
<%- include("../partials/_footer") %>
